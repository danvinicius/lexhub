    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.3",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
